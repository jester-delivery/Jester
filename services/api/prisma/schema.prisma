generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ADMIN
  COURIER
}

model User {
  id           String      @id @default(uuid())
  email        String      @unique
  passwordHash String      @map("password_hash")
  name         String
  phone        String?
  role         UserRole    @default(USER)
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime    @updatedAt @map("updated_at")
  orders       Order[]
  cartOrders   CartOrder[]
  addresses    Address[]

  @@map("users")
}

model Address {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  label     String   // Home, Work, Other
  street    String
  number    String?
  details   String?  // bloc, scara, apartament, etc.
  city      String
  lat       Float?
  lng       Float?
  isDefault Boolean  @default(false) @map("is_default")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("addresses")
}

model Category {
  id        String    @id @default(uuid())
  name      String
  slug      String    @unique
  image     String?
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  products  Product[]

  @@map("categories")
}

model Restaurant {
  id          String    @id @default(uuid())
  name        String
  description String?
  address     String
  phone       String?
  image       String?
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  products    Product[]

  @@map("restaurants")
}

model Product {
  id           String      @id @default(uuid())
  name         String
  description  String?
  price        Decimal     @db.Decimal(10, 2)
  image        String?
  /** ON/OFF din Admin: false = produsul dispare complet de la client */
  isActive     Boolean     @default(true) @map("is_active")
  /** Disponibil acum: false = apare la client dar nu poate fi adăugat (badge Indisponibil) */
  available    Boolean     @default(true)
  categoryId   String      @map("category_id")
  restaurantId String      @map("restaurant_id")
  sortOrder    Int?        @map("sort_order")
  stock        Int?        @map("stock")
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime    @updatedAt @map("updated_at")
  orderItems   OrderItem[]
  category     Category    @relation(fields: [categoryId], references: [id])
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id])

  @@map("products")
}

model Order {
  id              String      @id @default(uuid())
  userId          String      @map("user_id")
  status          OrderStatus @default(PENDING)
  total           Decimal     @db.Decimal(10, 2)
  deliveryAddress String      @map("delivery_address")
  createdAt       DateTime    @default(now()) @map("created_at")
  updatedAt       DateTime    @updatedAt @map("updated_at")
  orderItems      OrderItem[]
  user            User        @relation(fields: [userId], references: [id])

  @@map("orders")
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String   @map("order_id")
  productId String   @map("product_id")
  quantity  Int
  price     Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now()) @map("created_at")
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])

  @@map("order_items")
}

model CartOrder {
  id                        String            @id @default(uuid())
  userId                    String?           @map("user_id")
  idempotencyKey            String?           @map("idempotency_key")
  orderType                 String            @default("product_order") @map("order_type") // "product_order" | "package_delivery"
  status                    OrderStatus       @default(PENDING)
  total                     Decimal           @db.Decimal(10, 2)
  createdAt                 DateTime          @default(now()) @map("created_at")
  deletedAt                 DateTime?         @map("deleted_at") // soft delete – doar PENDING poate fi șters
  paymentMethod             String            @default("CASH_ON_DELIVERY") @map("payment_method")
  deliveryAddress           String?           @map("delivery_address")
  phone                     String?
  name                      String?
  notes                     String?
  estimatedDeliveryMinutes  Int?              @map("estimated_delivery_minutes")
  internalNotes             String?           @map("internal_notes")
  assignedCourierId         String?           @map("assigned_courier_id")
  courierAcceptedAt         DateTime?        @map("courier_accepted_at")
  items                     CartOrderItem[]
  user                      User?             @relation(fields: [userId], references: [id])
  courierRejections         CourierRejection[]
  statusLogs                OrderStatusLog[]

  @@unique([userId, idempotencyKey])
  @@map("cart_orders")
}

model OrderStatusLog {
  id               String   @id @default(uuid())
  orderId          String   @map("order_id")
  previousStatus  String   @map("previous_status")
  newStatus       String   @map("new_status")
  changedByUserId String?  @map("changed_by_user_id")
  createdAt        DateTime @default(now()) @map("created_at")
  order            CartOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("order_status_logs")
}

model CourierRejection {
  id         String    @id @default(uuid())
  orderId    String    @map("order_id")
  courierId  String    @map("courier_id")
  rejectedAt DateTime  @default(now()) @map("rejected_at")
  reason     String?   @map("reason")
  order      CartOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@unique([orderId, courierId])
  @@map("courier_rejections")
}

model CartOrderItem {
  id       String    @id @default(uuid())
  orderId  String    @map("order_id")
  name     String
  price    Decimal   @db.Decimal(10, 2)
  quantity Int
  order    CartOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("cart_order_items")
}

enum OrderStatus {
  PENDING
  ACCEPTED
  CONFIRMED
  PREPARING
  READY
  DELIVERING
  ON_THE_WAY
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
  CANCELED
}
