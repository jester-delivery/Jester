generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String      @id @default(uuid())
  email        String      @unique
  passwordHash String      @map("password_hash")
  name         String
  phone        String?
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime    @updatedAt @map("updated_at")
  orders       Order[]
  cartOrders   CartOrder[]
  addresses    Address[]

  @@map("users")
}

model Address {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  label     String   // Home, Work, Other
  street    String
  number    String?
  details   String?  // bloc, scara, apartament, etc.
  city      String
  lat       Float?
  lng       Float?
  isDefault Boolean  @default(false) @map("is_default")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("addresses")
}

model Category {
  id        String    @id @default(uuid())
  name      String
  slug      String    @unique
  image     String?
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  products  Product[]

  @@map("categories")
}

model Restaurant {
  id          String    @id @default(uuid())
  name        String
  description String?
  address     String
  phone       String?
  image       String?
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  products    Product[]

  @@map("restaurants")
}

model Product {
  id           String      @id @default(uuid())
  name         String
  description  String?
  price        Decimal     @db.Decimal(10, 2)
  image        String?
  available    Boolean     @default(true)
  categoryId   String      @map("category_id")
  restaurantId String      @map("restaurant_id")
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime    @updatedAt @map("updated_at")
  orderItems   OrderItem[]
  category     Category    @relation(fields: [categoryId], references: [id])
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id])

  @@map("products")
}

model Order {
  id              String      @id @default(uuid())
  userId          String      @map("user_id")
  status          OrderStatus @default(PENDING)
  total           Decimal     @db.Decimal(10, 2)
  deliveryAddress String      @map("delivery_address")
  createdAt       DateTime    @default(now()) @map("created_at")
  updatedAt       DateTime    @updatedAt @map("updated_at")
  orderItems      OrderItem[]
  user            User        @relation(fields: [userId], references: [id])

  @@map("orders")
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String   @map("order_id")
  productId String   @map("product_id")
  quantity  Int
  price     Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now()) @map("created_at")
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])

  @@map("order_items")
}

model CartOrder {
  id                        String          @id @default(uuid())
  userId                    String?         @map("user_id")
  status                    OrderStatus     @default(PENDING)
  total                     Decimal         @db.Decimal(10, 2)
  createdAt                 DateTime        @default(now()) @map("created_at")
  paymentMethod             String          @default("CASH_ON_DELIVERY") @map("payment_method")
  deliveryAddress           String?         @map("delivery_address")
  phone                     String?
  name                      String?
  notes                     String?
  estimatedDeliveryMinutes  Int?            @map("estimated_delivery_minutes")
  internalNotes             String?         @map("internal_notes")
  items                     CartOrderItem[]
  user                      User?           @relation(fields: [userId], references: [id])

  @@map("cart_orders")
}

model CartOrderItem {
  id       String    @id @default(uuid())
  orderId  String    @map("order_id")
  name     String
  price    Decimal   @db.Decimal(10, 2)
  quantity Int
  order    CartOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("cart_order_items")
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  DELIVERING
  ON_THE_WAY
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
  CANCELED
}
